<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="processMehtod"
                android:text="Button Map" />

            <Button
                android:id="@+id/buttonMarket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="processMehtod"
                android:text="Go to particular app Google play" />

            <Button
                android:id="@+id/buttonEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="processMehtod"
                android:text="Send Email" />

            <Button
                android:id="@+id/buttonImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="processMehtod"
                android:text="Send Image" />

            <Button
                android:id="@+id/buttonCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="processMehtod"
                android:text="Calendar" />

            <Button
                android:id="@+id/buttonCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="processMehtod"
                android:text="Call" />

            <Button
                android:id="@+id/buttonVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="processMehtod"
                android:text="Verify Activity Availability - Map" />

            <Button
                android:id="@+id/buttonChooser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="processMehtod"
                android:text="Chooser" />

            <Button
                android:id="@+id/buttonInstance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="processMehtod"
                android:text="Google play Instance" />

            <Button
                android:id="@+id/buttonImageSDCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="processMehtod"
                android:text="Send SD card image" />

            <Button
                android:id="@+id/buttonMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="processMehtod"
                android:text="Send Message" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>